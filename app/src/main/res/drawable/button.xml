<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#5e852e"/>
            <gradient android:angle="180" android:startColor="#b5964a" android:endColor="#856c2e" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="20dip" />
            <stroke android:width="3dip" android:color="#5e852e"/>
            <gradient android:angle="180" android:startColor="#b5964a" android:endColor="#856c2e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#FFFFFF"/>
            <gradient android:angle="180" android:startColor="#D0FA694B" android:endColor="#9E2602" />
        </shape>
    </item>
</selector>